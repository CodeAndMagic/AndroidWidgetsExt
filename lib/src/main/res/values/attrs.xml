<resources>

    <!-- Extensions styleable attributes -->
    <declare-styleable name="ThemeExtension">
        <attr name="colorPrimary" format="color|reference"/>
        <attr name="colorPrimaryDark" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BorderExtension">
        <attr name="borderColor" format="color|reference"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderPosition">
            <flag name="top" value="0x01"/>
            <flag name="left" value="0x02"/>
            <flag name="right" value="0x04"/>
            <flag name="bottom" value="0x08"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ClearableExtension">
        <attr name="clearIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PushButtonExtension">
        <attr name="pushDepth" format="dimension"/>
        <attr name="pushCornerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AnimatedBackgroundExtension">
        <attr name="animatedBackgroundDrawable" format="string"/>
        <attr name="android:animationDuration"/>
    </declare-styleable>

    <!-- Widgets styleable attributes -->
    <declare-styleable name="Widget">
        <attr name="extensions">
            <flag name="font" value="0x01"/>
            <flag name="theme" value="0x02"/>
            <flag name="border" value="0x04"/>
            <flag name="clearable" value="0x08"/>
            <flag name="pushButton" value="0x10"/>
            <flag name="animatedBackground" value="0x20"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="backgroundStrokeWidth" format="dimension"/>
        <attr name="animateFromCenter" format="boolean"/>
    </declare-styleable>

</resources>