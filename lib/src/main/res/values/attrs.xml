<resources>

    <declare-styleable name="FontExtension">
        <attr name="android:textAppearance"/>
    </declare-styleable>

    <declare-styleable name="ClearableExtension">
        <attr name="clearIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ThemeExtension">
        <attr name="colorPrimary" format="color|reference"/>
        <attr name="colorPrimaryDark" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BorderExtension"> <!-- extends ThemeExtension -->
        <attr name="borderColor" format="color|reference"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderPosition">
            <flag name="top" value="0x01"/>
            <flag name="left" value="0x02"/>
            <flag name="right" value="0x04"/>
            <flag name="bottom" value="0x08"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PushButtonExtension"> <!-- extends ThemeExtension -->
        <attr name="pushDepth" format="dimension"/>
        <attr name="pushCornerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AnimatedBackgroundExtension"> <!-- extends ThemeExtension -->
        <attr name="android:background"/>
        <attr name="android:animationDuration"/>
        <attr name="drawableClass" format="string"/>
        <attr name="interpolatorClass" format="string"/>
    </declare-styleable>

    <declare-styleable name="AnimatedStrokeDrawable">
        <attr name="animateFromCenter" format="boolean"/>
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

</resources>